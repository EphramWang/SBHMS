<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLight">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logo2"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/logo1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Smart Battery Health Monitor System"
            android:textSize="24sp"
            android:textColor="#97A4BA"
            android:layout_toRightOf="@id/logo1"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/bgDark"
                android:textSize="16sp"
                android:textColor="@color/textColorDark"
                android:text="Battery Meter"/>

            <LinearLayout
                android:id="@+id/battery_info_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/bgDark"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/voltage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.02V"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/percent1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:text="72%"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="cell1"
                            android:textSize="16sp"
                            android:textColor="@color/textColorLight"/>

                        <ProgressBar
                            android:id="@+id/progress1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:minWidth="80dp"
                            android:minHeight="3dp"
                            android:progress="50"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/bgDark"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/voltage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.02V"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/percent2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:text="72%"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="cell2"
                            android:textSize="16sp"
                            android:textColor="@color/textColorLight"/>

                        <ProgressBar
                            android:id="@+id/progress2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:minWidth="80dp"
                            android:minHeight="3dp"
                            android:progress="50"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/bgDark">

                        <TextView
                            android:id="@+id/voltage3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.02V"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/percent3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:text="72%"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="cell3"
                            android:textSize="16sp"
                            android:textColor="@color/textColorLight"/>

                        <ProgressBar
                            android:id="@+id/progress3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:minWidth="80dp"
                            android:minHeight="3dp"
                            android:progress="50"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/bgDark"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/voltage4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.02V"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/percent4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:text="72%"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="cell4"
                            android:textSize="16sp"
                            android:textColor="@color/textColorLight"/>

                        <ProgressBar
                            android:id="@+id/progress4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:minWidth="80dp"
                            android:minHeight="3dp"
                            android:progress="50"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/bgDark"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/voltage5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.02V"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/percent5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:text="72%"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="cell5"
                            android:textSize="16sp"
                            android:textColor="@color/textColorLight"/>

                        <ProgressBar
                            android:id="@+id/progress5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:minWidth="80dp"
                            android:minHeight="3dp"
                            android:progress="50"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/bgDark"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:id="@+id/voltage6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.02V"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/percent6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/textColorLight"
                            android:text="72%"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="cell6"
                            android:textSize="16sp"
                            android:textColor="@color/textColorLight"/>

                        <ProgressBar
                            android:id="@+id/progress6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:minWidth="80dp"
                            android:minHeight="3dp"
                            android:progress="50"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#283040"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/textColorDark"
                        android:textSize="16sp"
                        android:text="Pressure"/>

                    <com.hoho.android.usbserial.examples.CirCleProgressBar
                        android:id="@+id/pressure_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        app:circle_bg_color="@color/textColorDark"
                        app:circle_bg_width="10dp"
                        app:circle_color="#51C81C"
                        app:circle_width="10dp"
                        app:start_angle="180"
                        app:total_angle="180"
                        app:text_size="16sp"
                        app:text_color="#97A4BA"/>

                    <TextView
                        android:id="@+id/pressure_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColorDark"
                        android:text="Normal"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgDark"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/textColorDark"
                        android:text="Temperature"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/temperature1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/textColorLight"
                        android:text="Temperature1: "
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/temperature2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/textColorLight"
                        android:text="Temperature2: "
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/temperature_warning"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/textColorLight"
                        android:text="warning!"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/leakage_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@color/bgDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/leakage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Leakage Alarm"
                    android:textColor="@color/textColorDark"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/leakage_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/leakage_title"
                    android:textSize="16sp"
                    android:text="Normal"/>

                <View
                    android:id="@+id/leakage_color"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/leakage_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/yuanjiaobg_green"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <com.hoho.android.usbserial.chart.BatteryMonChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@color/bgDark"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </com.hoho.android.usbserial.chart.BatteryMonChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/cell1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cell1: 4.02V"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat1"/>
                <TextView
                    android:id="@+id/cell2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cell2: 4.02V"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat2"/>
                <TextView
                    android:id="@+id/cell3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cell3: 4.02V"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat3"/>
                <TextView
                    android:id="@+id/cell4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cell4: 4.02V"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat4"/>
                <TextView
                    android:id="@+id/cell5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cell5: 4.02V"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat5"/>
                <TextView
                    android:id="@+id/cell6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cell6: 4.02V"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat6"/>
            </LinearLayout>

            <com.hoho.android.usbserial.chart.TempMonChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/bgDark"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            </com.hoho.android.usbserial.chart.TempMonChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Temperature1: 31°C"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat1"/>
                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Temperature2: 31°C"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat2"/>
                <TextView
                    android:id="@+id/pressure1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pressure: 0.1bar"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/bat3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/time1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:text="History 30Sec"/>
                <TextView
                    android:id="@+id/time2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:text="History 3Min"/>
                <TextView
                    android:id="@+id/time3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:text="History 10Min"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>